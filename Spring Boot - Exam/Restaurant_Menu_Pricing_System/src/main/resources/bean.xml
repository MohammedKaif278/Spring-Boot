<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

<bean id="st" class="com.example.demo.MenuService">

<constructor-arg name="restaurantName" value="Hotel Livia"></constructor-arg>

<constructor-arg name="menuItems">
<map>
<entry key="Biryani" value="250.0"/>
<entry key="Fried Rice" value="180.0"/>
<entry key="Noodles" value="160.0"/>
</map>
</constructor-arg>


</bean>




</beans>